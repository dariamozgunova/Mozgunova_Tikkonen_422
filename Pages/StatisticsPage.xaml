<Page x:Class="Mozgunova_Tikkonen_422.Pages.StatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mozgunova_Tikkonen_422.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Статистика товаров">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Общая статистика" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="Общая стоимость" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtTotalValue" Text="0 руб" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="Средняя цена" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtAveragePrice" Text="0 руб" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="1" Header="Статистика по категориям" Padding="15" Margin="0,10,0,0">
            <DataGrid x:Name="categoryStatsGrid" 
                      AutoGenerateColumns="False"
                      IsReadOnly="True" 
                      GridLinesVisibility="Horizontal" 
                      HeadersVisibility="Column"
                      FontSize="12" 
                      CanUserAddRows="False" 
                      CanUserDeleteRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Категория" Binding="{Binding CategoryName}" Width="200"/>
                    <DataGridTextColumn Header="Количество товаров" Binding="{Binding ProductCount}" Width="120"/>
                    <DataGridTextColumn Header="Средняя цена" Binding="{Binding AveragePrice, StringFormat=N2}" Width="120"/>
                    <DataGridTextColumn Header="Общая стоимость" Binding="{Binding TotalValue, StringFormat=N2}" Width="120"/>
                    <DataGridTextColumn Header="Мин. цена" Binding="{Binding MinPrice, StringFormat=N2}" Width="100"/>
                    <DataGridTextColumn Header="Макс. цена" Binding="{Binding MaxPrice, StringFormat=N2}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>


    </Grid>
</Page>
<Page x:Class="Mozgunova_Tikkonen_422.Pages.CalcPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mozgunova_Tikkonen_422.Pages"
      mc:Ignorable="d" 
      Title="Калькулятор"
      Background="#FFF0F5" Width="238" Height="354">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Экран -->
        <TextBox x:Name="Display"
                 Text="0"
                 FontSize="32"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Center"
                 Height="60"
                 Margin="0 0 0 10"
                 TextAlignment="Right"
                 IsReadOnly="True"
                 Background="#FFFFFF"
                 BorderBrush="#F4A4B5"
                 BorderThickness="2"/>

        <!-- Кнопки -->
        <UniformGrid Grid.Row="1" Rows="5" Columns="4" Margin="0">
            <Button Content="C" Click="Clear_Click" Background="#adffff"/>
            <Button Content="←" Click="Backspace_Click" Background="#ccccff"/>
            <Button Content="÷" Click="Operator_Click" Background="#ccccff"/>
            <Button Content="×" Click="Operator_Click" Background="#ccccff"/>

            <Button Content="7" Click="Number_Click" Background="#ffc2cc"/>
            <Button Content="8" Click="Number_Click" Background="#ffc2cc"/>
            <Button Content="9" Click="Number_Click" Background="#ffc2cc"/>
            <Button Content="−" Click="Operator_Click" Background="#ccccff"/>

            <Button Content="4" Click="Number_Click" Background="#ffc2cc"/>
            <Button Content="5" Click="Number_Click" Background="#ffc2cc"/>
            <Button Content="6" Click="Number_Click" Background="#ffc2cc"/>
            <Button Content="+" Click="Operator_Click" Background="#ccccff"/>

            <Button Content="1" Click="Number_Click" Background="#ffc2cc"/>
            <Button Content="2" Click="Number_Click" Background="#ffc2cc"/>
            <Button Content="3" Click="Number_Click" Background="#ffc2cc"/>
            <Button Content="=" Click="Equals_Click" Background="#F48FB1" Foreground="White"/>

            <Button Content="0" Click="Number_Click" Background="#ffc2cc"/>
            <Button Content="." Click="Number_Click" Background="#ccccff"/>
            <Button Content="±" Click="Negate_Click" Background="#ccccff"/>
            <Button Content=" " IsEnabled="False"/>
        </UniformGrid>
    </Grid>
</Page>

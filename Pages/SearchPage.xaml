<Page x:Class="Mozgunova_Tikkonen_422.Pages.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mozgunova_Tikkonen_422.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Поиск товаров">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Параметры поиска" Padding="15">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Название товара:" 
                              VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold"/>
                    <TextBox x:Name="nameFilterTextBox" Grid.Column="1" Margin="0,0,10,0" Height="25" 
                            Text="" ToolTip="Введите название товара для поиска"
                            TextChanged="nameFilterTextBox_TextChanged"/>

                    <TextBlock Grid.Column="2" Text="Категория:" 
                              VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold"/>
                    <ComboBox x:Name="categoryComboBox" Grid.Column="3" Margin="0,0,10,0" Height="25" 
                             DisplayMemberPath="CategoryName" SelectedValuePath="CategoryID"
                             ToolTip="Выберите категорию для поиска"
                             SelectionChanged="categoryComboBox_SelectionChanged">
                        <ComboBoxItem Content="Все категории" IsSelected="True"/>
                    </ComboBox>

                    <Button x:Name="clearFiltersButton" Grid.Column="4" Content="Очистить" 
                           Click="clearFiltersButton_Click" Width="80" Height="25"/>
                </Grid>
            </StackPanel>
        </GroupBox>
        
        <DataGrid x:Name="ProductsGrid" Grid.Row="1" Margin="0,15,0,0" 
                  AutoGenerateColumns="False" IsReadOnly="True"
                  GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                  FontSize="12" CanUserAddRows="False" CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductID}" Width="60"/>
                <DataGridTextColumn Header="Название товара" Binding="{Binding Name}" Width="250"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category.CategoryName}" Width="180"/>
                <DataGridTextColumn Header="Цена (руб)" Binding="{Binding Price, StringFormat=N2}" Width="120"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>

<Page x:Class="Mozgunova_Tikkonen_422.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mozgunova_Tikkonen_422.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Управление товарами">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Добавить/Редактировать товар" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="txtName" Grid.Column="0" Margin="5" Height="25" Text="Название"/>
                <ComboBox x:Name="cmbCategory" Grid.Column="1" Margin="5" Height="25" DisplayMemberPath="CategoryName"/>
                <TextBox x:Name="txtPrice" Grid.Column="2" Margin="5" Height="25" Text="0"/>
                <TextBox x:Name="txtQuantity" Grid.Column="3" Margin="5" Height="25" Text="0"/>
                <TextBlock x:Name="txtProductId" Grid.Column="4" Margin="5" VerticalAlignment="Center" Text="ID: 0"/>

                <StackPanel Grid.Column="5" Orientation="Horizontal">
                    <Button x:Name="btnAdd" Content="Добавить" Click="BtnAdd_Click" Width="80" Height="25" Margin="5"/>
                    <Button x:Name="btnUpdate" Content="Обновить" Click="BtnUpdate_Click" Width="80" Height="25" Margin="5"/>
                    <Button x:Name="btnDelete" Content="Удалить" Click="BtnDelete_Click" Width="80" Height="25" Margin="5"/>
                    <Button x:Name="btnClear" Content="Очистить" Click="BtnClear_Click" Width="80" Height="25" Margin="5"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <DataGrid x:Name="productsGrid" Grid.Row="1" Margin="0,10,0,0" 
                  AutoGenerateColumns="False" SelectionChanged="ProductsGrid_SelectionChanged"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductID}" Width="50"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category.CategoryName}" Width="150"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="100"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock x:Name="txtStatus" Grid.Row="2" Margin="5" Foreground="Blue"/>
    </Grid>
</Page>

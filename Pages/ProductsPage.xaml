<Page x:Class="Mozgunova_Tikkonen_422.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mozgunova_Tikkonen_422.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Управление товарами">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Добавить/Редактировать товар" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Название:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtName" Grid.Column="1" Margin="0,0,10,0" Height="25" Text="" 
                             ToolTip="Введите название товара"/>

                    <TextBlock Grid.Column="2" Text="Категория:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold"/>
                    <ComboBox x:Name="cmbCategory" Grid.Column="3" Margin="0,0,10,0" Height="25" 
                              DisplayMemberPath="CategoryName" SelectedValuePath="CategoryID"
                              ToolTip="Выберите категорию товара"/>

                    <TextBlock Grid.Column="4" Text="Цена:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtPrice" Grid.Column="5" Margin="0,0,10,0" Height="25" Text="0"
                             ToolTip="Введите цену товара"/>

                    <TextBlock Grid.Column="6" Text="Количество:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtQuantity" Grid.Column="7" Height="25" Text="0"
                             ToolTip="Введите количество товара"/>
                </Grid>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnAdd" Content="Добавить" Click="BtnAdd_Click" 
                            Width="100" Height="30" Margin="5" FontWeight="SemiBold"/>
                    <Button x:Name="btnUpdate" Content="Редактировать" Click="BtnUpdate_Click" 
                            Width="100" Height="30" Margin="5" FontWeight="SemiBold"/>
                    <Button x:Name="btnDelete" Content="Удалить" Click="BtnDelete_Click" 
                            Width="100" Height="30" Margin="5" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <DataGrid x:Name="productsGrid" Grid.Row="1" Margin="0,15,0,0" 
                  AutoGenerateColumns="False" SelectionChanged="ProductsGrid_SelectionChanged"
                  IsReadOnly="True" GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                  FontSize="12" CanUserAddRows="False" CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductID}" Width="60" IsReadOnly="True"/>
                <DataGridTextColumn Header="Название товара" Binding="{Binding Name}" Width="250"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category.CategoryName}" Width="180"/>
                <DataGridTextColumn Header="Цена (руб)" Binding="{Binding Price, StringFormat=N2}" Width="120"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>